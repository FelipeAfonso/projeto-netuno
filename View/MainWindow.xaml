<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FFA1A8F3" Offset="1"/>
                <GradientStop Color="White"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Label x:Name="label" Content="Loading System..." HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" FontFamily="Freestyle Script" FontSize="72"/>
        <Label x:Name="label1" Content="*Temporary" HorizontalAlignment="Right" Margin="0" VerticalAlignment="Bottom" Background="{x:Null}"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="100" Margin="143,53,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
